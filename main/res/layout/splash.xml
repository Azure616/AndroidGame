<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ghost" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Version 1.0.0"
        android:layout_marginTop="5dp"
        android:id="@+id/splashScreenText2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team member:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/splashScreenText3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bowen Ke, Tianyang He, Haoyang Li"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/splashScreenText5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="University of Virginia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/splashScreenText4"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CS2110 Spring 2015"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/splashScreenText7"/>


</LinearLayout>